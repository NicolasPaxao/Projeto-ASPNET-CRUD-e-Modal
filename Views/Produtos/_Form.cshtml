@model Produto
@using ProjetoTreino0702.Models.Enumeradores

<div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" aria-describedby="emailHelp" placeholder="Ex.:Calça Skinny">
</div>
<div class="form-group">
    <label asp-for="Fabricante"></label>
    <input asp-for="Fabricante" class="form-control" aria-describedby="emailHelp" placeholder="Ex.:Nike">
</div>
<div class="form-group">
    <label asp-for="Categorias"></label>
    <select asp-for="Categorias" asp-items="@Html.GetEnumSelectList<CategoriaProdutos>()" class="form-control">
        <option>Escolha...</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="Tamanhos"></label>
    <select asp-for="Tamanhos" asp-items="@Html.GetEnumSelectList<TamanhoProdutos>()" class="form-control">
        <option>Escolha...</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="Preco"></label>
    <input asp-for="Preco" class="form-control" aria-describedby="emailHelp" placeholder="R$">
</div>